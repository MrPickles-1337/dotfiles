export ZSH="$HOME/.oh-my-zsh"
export EDITOR=nvim
export TERM=xterm-256color


ZSH_THEME="robbyrussell"

zstyle ':omz:update' mode auto      # update automatically without asking

DISABLE_UNTRACKED_FILES_DIRTY="true"

plugins=(git rust docker)

source $ZSH/oh-my-zsh.sh

function chpwd {
	emulate -L zsh
	ls
}

path+=/home/kirill/Android/Sdk/platform-tools
path+=/home/kirill/.bin
path+=/home/kirill/.pub-cache/bin
path+=/home/kirill/.local/bin
path+=/home/kirill/flutter/bin
path+=/home/kirill/.cargo/bin



alias nv=nvim
alias icat="kitty +kitten icat"
alias py=python
alias neovide="WINIT_UNIX_BACKEND=x11 neovide"


alias n="nnn -de"
export NNN_FIFO=/tmp/nnn.fifo
export NNN_PLUG="p:preview-tui"
export SPLIT="v"

function ncd {
  if [ -n $NNNLVL ] && [ "${NNNLVL:-0}" -ge 1]; then
    echo "nnn is already running"
    return
  fi
  export NNN_TMPFILE="${XDG_CONFIG_HOME:-$HOME/.config}/nnn/.lastd"
  n "$@"
  if [ -f "$NNN_TMPFILE" ]; then
    . "$NNN_TMPFILE"
    rm -f "$NNN_TMPFILE" > /dev/null
  fi
}
